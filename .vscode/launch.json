{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": { "PYTHONPATH": "${workspaceRoot}"},
            "justMyCode": false,
        },
        {
            "name": "Streamlit Debug from UI",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "justMyCode": true,
            "cwd": "${fileDirname}",
            "args": ["run", "./app.py"]
        },
        {
            "name": "Debug Fast API",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${fileDirname}",
            "module": "uvicorn",
            "args": ["api:app", "--host", "0.0.0.0", "--port", "8000"]
        }
    ]
}